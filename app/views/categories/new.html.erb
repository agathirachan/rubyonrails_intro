<h3 class="text-center mt-4">Create a new Category</h3>
<div class="container">  
    <div class="row justify-content-center">
        <div class="col-sm-10">
            <%= render "shared/errors" , obj: @category%>
            <%= form_for(@category, :html=>{:class => 'shadow p-3 mb-3 bg-info rounded' }) do |f| %>
                    <div class="form-group row">
                        <%= f.label :name, "Category name", class:"col-sm-2 col-form-label text-light" %>
                        <div class="col-sm-10">
                            <%= f.text_field :name, class:"form-control shadow rounded", placeholder:"Enter a name"%>
                        </div>
                    </div>
                    <div class="form-group row  justify-content-center">
                        <%= f.submit class:"btn btn-outline-light btn-lg" %>
                    </div> 
            <% end %>     
        </div> 
    </div>
</div>