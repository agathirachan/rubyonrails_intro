<div class="container">  
    <div class="row justify-content-center">
        <div class="col-sm-10">
              <%= render "shared/errors" %>
              <%= form_for(article, :html=>{:class => 'shadow p-3 mb-3 bg-info rounded' }) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class:"col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.text_field :title, class:"form-control shadow rounded", placeholder:"Title of article"%>
                    </div>
                </div>
                <div class="form-group row">
                      <%= f.label :description, class:"col-sm-2 col-form-label text-light" %>
                      <div class="col-sm-10">
                            <%= f.text_area :description, rows:10, class:"form-control shadow rounded", placeholder:"Description"%>
                      </div>
                  </div>
                  <div class="form-group row  justify-content-center">
                      <%= f.submit class:"btn btn-outline-light btn-lg" %>
                  </div> 
              <% end %>     
        </div>
        <div class="mb-3">
           <%= link_to '[ Canvel and Retrun to Article Lists ]', articles_path, class:"text-info" %> 
        </div>   
    </div>
</div>


