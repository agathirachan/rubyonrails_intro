

<h3 class="text-center mt-4">New Article</h3>
<%= render 'form', article: @article %>


<%
=begin %>
  <% if  @article.errors.any? %>
    <h1>Errors</h1>
    <ul>
      <% @article.errors.full_messages.each do |err| %>
        <li>
          <%= err %>
        </li>   
      <% end %>
    </ul>
  <% end  %>
  <%= form_for @article, url: {controller:"articles", action: "create"} do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
  <%= render 'form', article: @article %>
  <%= link_to 'Back', articles_path %>
<%
=end %>

