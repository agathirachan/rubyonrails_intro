<h3 class="text-center mt-4">Login In for Maharam Blog</h3>
<div class="container">  
    <div class="row justify-content-center">
        <div class="col-sm-10">
            <%= form_for( :session, url: login_path, :html=>{:class => 'shadow p-3 mb-3 bg-info rounded' } ) do |f| %>               
                    <div class="form-group row">
                        <%= f.label :email, class:"col-sm-2 col-form-label text-light" %>
                        <div class="col-sm-10">
                            <%= f.email_field :email, class:"form-control shadow rounded", placeholder:"Enter your email address"%>
                        </div>
                    </div>
                    <div class="form-group row">
                        <%= f.label :password, class:"col-sm-2 col-form-label text-light" %>
                        <div class="col-sm-10">
                            <%= f.password_field :password, class:"form-control shadow rounded", placeholder:"Enter your password"%>
                        </div>
                    </div>
                    <div class="form-group row  justify-content-center">
                        <%= f.submit "Login" , class:"btn btn-outline-light btn-lg" %>
                    </div> 
            <% end %>     
        </div>
        <div class="mb-3">
           <%= link_to '[ Canvel and Retrun to Article Lists ]', articles_path, class:"text-info" %> 
        </div>   
    </div>
</div>


